<Window
    x:Class="lijohnttle.Media.Photo.App.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:lijohnttle.Media.Photo.App.ViewModels"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="450"
    Width="800"
    Background="#191919"
    Foreground="White"
    d:DataContext="{d:DesignInstance Type={x:Type viewmodels:MainWindowViewModel}, IsDesignTimeCreatable=False}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="6" />
            <ColumnDefinition Width="300" MinWidth="300" />
        </Grid.ColumnDefinitions>

        <GridSplitter
            Grid.Column="1"
            Background="#595959"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ResizeDirection="Columns"
            ResizeBehavior="PreviousAndNext" />

        <Grid Grid.Column="2" Background="#313131">
            
        </Grid>
    </Grid>
</Window>
